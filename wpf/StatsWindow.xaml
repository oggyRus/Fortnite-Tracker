<Window x:Class="WpfApp1.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="StatsWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Overall">
                <StackPanel x:Name="overall_matches">
                </StackPanel>
        </TabItem>
        <TabItem x:Name="soloAllStats" Header="Solo">
                <StackPanel x:Name="solo_matches">
                </StackPanel>
            </TabItem>
            <TabItem x:Name="duoAllStats" Header="Duo">
                <StackPanel x:Name="duo_matches">
                </StackPanel>
            </TabItem>
            <TabItem x:Name="squadAllStats" Header="Squad">
                <StackPanel x:Name="squad_matches">
                </StackPanel>                   
            </TabItem>
            <TabItem x:Name="ltmAllStats" Header="Ltm">
                <StackPanel x:Name="ltm_matches">
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>